PORT=4000
CORS_ORIGIN=http://localhost:8080

# PostgreSQL connection (use DATABASE_URL or the individual PG* fields)
# For Local Development:
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/hatod
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=hatod
# PGUSER=postgres
# PGPASSWORD=postgres
# PGSSL=false

# For Supabase (Production):
# Get your connection string from Supabase Dashboard → Settings → Database
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.xxxxx.supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxx.supabase.co:5432/postgres
# Or use individual parameters:
# PGHOST=db.xxxxx.supabase.co
# PGPORT=5432
# PGDATABASE=postgres
# PGUSER=postgres
# PGPASSWORD=[YOUR-PASSWORD]
# PGSSL=true

# Security
JWT_SECRET=replace-with-strong-secret
JWT_REFRESH_SECRET=replace-with-another-strong-secret
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# Supabase Storage (for image uploads)
# Get from Supabase Dashboard → Settings → API
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here


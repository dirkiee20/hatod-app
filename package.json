{
  "name": "restauranthub",
  "version": "1.0.0",
  "description": "HATOD food delivery platform frontend and API server",
  "main": "index.html",
  "type": "module",
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/geolocation": "^7.1.6",
    "@dhiwise/component-tagger": "^1.0.10",
    "@tailwindcss/forms": "^0.5.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-elevation": "^2.0.0",
    "tailwindcss-fluid-type": "^2.0.7"
  },
  "scripts": {
    "build": "echo 'No build step required'",
    "build:css": "npx @dhiwise/component-tagger && npx tailwindcss -i ./css/tailwind.css -o ./css/main.css",
    "watch:css": "npx @dhiwise/component-tagger && npx tailwindcss -i ./css/tailwind.css -o ./css/main.css --watch",
    "dev": "npm run watch:css",
    "serve": "npx http-server . -p 3000 -o",
    "start": "npm run build:css && npm run serve",
    "server": "node api/server.js",
    "dev:server": "nodemon api/server.js",
    "generate:icons": "node scripts/generate-android-icons.js",
    "build:www": "npm run build:css && node scripts/build-www.js",
    "build:apk": "npm run build:www && npx cap sync android",
    "apk:build": "npm run build:apk && cd android && .\\gradlew.bat assembleDebug"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/line-clamp": "^0.1.0",
    "@tailwindcss/typography": "^0.5.16",
    "nodemon": "^3.1.4",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17"
  }
}
